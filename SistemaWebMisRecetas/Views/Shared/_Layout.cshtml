<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="header">
        <h1>Mis Recetas</h1>
    </div>
    <div id="menu">
        @Html.ActionLink("Inicio", "Index", "Home")
        @Html.ActionLink("Recetas","Index","Receta")
    </div>
    <div id="sidebar">
        @if (IsSectionDefined("SideBar"))
        {
            @RenderSection("SideBar")
        }
        else
        {
            <h2>Recetitas por Doquier</h2>
        }

    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <p>misrecetas@web.com</p>
    </div>
</body>
</html>